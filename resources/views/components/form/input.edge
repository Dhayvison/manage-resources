@if(label)
  <label for="{{id}}" class="form-label">{{label}}</label>
@end
<div class="input-group has-validation">
  <input 
    type="{{type}}" 
    name="{{name}}" 
    class="
      form-control 
      {{ error && 'is-invalid'}}
    " 
    id="{{id}}"
    value="{{ flashMessages.get(name) ?? value ?? ''}}"
  >
  <div class="invalid-feedback">
    {{ error && sentenceCase(error)}}
  </div>
</div>