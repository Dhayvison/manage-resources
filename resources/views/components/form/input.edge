<label for="{{id}}" class="form-label">{{label}}</label>
<div class="input-group has-validation">
  <input 
    type="{{type}}" 
    name="{{name}}" 
    class="
      form-control 
      @if(message) 
        is-invalid
      @end
    " 
    id="{{id}}"
  >
  <div class="invalid-feedback">
    @if(message) 
      {{message}}
    @end
  </div>
</div>